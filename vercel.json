{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "https://pokeapi.co/api/$1"
        },
        {
            "source": "/pokemon/:id*",
            "destination": "/index.html"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}